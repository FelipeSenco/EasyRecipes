{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es6",
    "jsx": "react",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
